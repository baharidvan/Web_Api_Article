@model UserCreateModel
@{
    Layout = "_Layout";
}

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label>User Name:</label>
        <span class="text-danger" asp-validation-for="@Model.Username"></span>
        <input asp-for="@Model.Username" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Password:</label>
        <span class="text-danger" asp-validation-for="@Model.Password"></span>
        <input type="password" asp-for="@Model.Password" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Confirm Password:</label>
        <span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
        <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" />
    </div>
    <div class="mb-3">
        <label>E-mail Adress:</label>
        <span class="text-danger" asp-validation-for="@Model.Email"></span>
        <input asp-for="@Model.Email" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Invite Code:</label>
        <span class="text-danger" asp-validation-for="@Model.InviteCode"></span>
        <input asp-for="@Model.InviteCode" class="form-control" />
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary"> Save </button>
    </div>

    <div class="text-danger mt-2" asp-validation-summary="ModelOnly">
    </div>
</form>
