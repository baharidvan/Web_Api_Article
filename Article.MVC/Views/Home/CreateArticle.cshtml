@model ArticleRequestModel

<html>
    <head>
        <title>Add New Article</title>
    </head>
    <body>

        
        @if(TempData["errorMessage"] != null)
        {
            <p style="color:red;">
                @TempData["errorMessage"]?.ToString()
            </p>
        }

        <h1>ADD NEW ARTICLE</h1>
        <form asp-action="CreateArticle" asp-controller="Home" method="post">
            <label>Article Name:</label>
            <input type="text" asp-for="@Model.Name"/>
            <br/>
            <hr/>
            <label>Author:</label>
            <input type="text" asp-for="@Model.Author"/>
            <br/>
            <hr/>
            <label>Publisher:</label>
            <input type="text" asp-for="@Model.Publisher"/>
            <br/>
            <hr/>
            <label>Price:</label>
            <input type="text" asp-for="@Model.Price"/>
            <br/>
            <hr/>

            <div>
                <a asp-action="Index" asp-controller="Home"> Back to Home</a>
                <button type="submit">ADD</button>
            </div>
        </form>
    </body>
</html>    